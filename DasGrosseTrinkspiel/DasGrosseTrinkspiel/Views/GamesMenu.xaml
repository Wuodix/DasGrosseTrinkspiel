                            HeightRequest="{StaticResource Spiele.ButtonHeight}"
                            AbsoluteLayout.LayoutBounds="0,210"
                            Clicked="m_btnGame_Clicked"
                        />
                        <Button
                            TextColor="White"
                            Margin="0,0,40,0"
                            FontSize="25"
